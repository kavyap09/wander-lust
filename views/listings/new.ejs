<% layout("/layouts/boilerplate.ejs") -%>
<div class="row mt-3">
    <div class="col-8 offset-2">
<body>
    <h3>Create a new listings</h3>
    <form method="POST" action="/listings" class="needs-validation" novalidate enctype="multipart/form-data">
        <div>
            <label for="title" class="form-label">Title</label>
             <input type="text" placeholder="enter title" name="listing[title]" class="form-control" required>
            <div class="valid-feedback">Tittle looks good!</div>
            <div class="invalid-feedback">please enter a value here</div>
            </div>
        
        <div>
            <label for="description" class="form-label">Description</label>
            <input type="text"  name="listing[description]" class="form-control" required>
            <div class="valid-feedback">Description looks good!</div>
            <div class="invalid-feedback">please enter a value here</div>
        </div>
      
        <div>
            <label for="image" class="form-label">Upload Image</label>
            <input type="file" name="listing[image]" class="form-control" >
      
        <div>
            <label for="price" class="form-label">Price</label>
            <input type="text"  name="listing[price]" placeholder="500" class="form-control" required>
            <div class="valid-feedback">Price suits the place well!</div>
            <div class="invalid-feedback">please enter a value here</div>
        </div>

   <div class="row">
    <div class="col-md-4">
        <div>
            <label for="location" class="form-label">location</label>
        <input type="text"  name="listing[location]"  placeholder="Hyderabad ,goa"class="form-control" required>
        <div class="invalid-feedback">please enter a value here</div>
    </div>
    </div>
    <div class="col-md-8">
    <div>
        <label for="country" class="form-label">Country</label>
        <input type="text"  name="listing[country]" placeholder="India" class="form-control" required>
        <div class="invalid-feedback">please enter a value here</div>
    </div>
    </div>
   </div>
        <br>
        <button class="btn btn-danger add-btn">Add</button>   
       
    </form>
    <script src="/js/script.js"></script>
</body>
</div>
