<% layout("/layouts/boilerplate.ejs") -%>
<div class="row mt-3">
    <div class="col-8 offset-2">
<body>
    <h3>Edit your listings</h3>
    <form method="POST" action="/listings/<%=listing._id%>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
        <div>
            <label for="title" class="form-label">Title</label>
            <input type="text"  name="listing[title]" value="<%=listing.title%>" class="form-control" required>
            <div class="valid-feedback">Title looks Good!</div>
         
        <div>
            <label for="description" class="form-label">Description</label>
        <input type="text" value="<%=listing.description%>" name="listing[description]" class="form-control" required>
        </div>
          <div class="mb-3">
                <p>hello</p>
            <img src="<%=listing.image.url%>">
          </div>
        <div>
            <label for="image" class="form-label">Upload Image</label>
        <input type="file" name="listing[image]" class="form-control" >
     </div>

     <div>
        <label for="price" class="form-label">Price</label>
        <input type="text" value="<%=listing.price%>" name="listing[price]" class="form-control" required>
        <div class="invalid-feedback">please eneter a valid price!</div>
    </div>

 <div class="row">
    <div class="col-md-4">
        <div>
            <label for="location" class="form-label">location</label>
            <input type="text" value="<%=listing.location%>" name="listing[location]" class="form-control" required>
            <div class="invalid-feedback">please eneter a valid location!</div>
        </div>
    </div>

    <div class="col-md-8">
        <div>
            <label for="country" class="form-label">Country</label>
            <input type="text" value="<%=listing.country%>" name="listing[country]" class="form-control"  required>
           <div class="invalid-feedback">please enter a valid country!</div>
        </div>
    </div>
 </div>
      <br>
        <button class="btn btb-danger add-btn">Edit</button>   
       
    </form>
</div>
</div>
