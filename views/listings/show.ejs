<% layout("/layouts/boilerplate.ejs") -%>
<body>
    <div class="row mt-3">
        <div class="col offset-2">
    <h3><%= listing.title %></h3>
    <div class="card col-8 show-card card-listing">
        <img src="<%=listing.image%>" class="card-img-top show-img" alt="image">
        <div class="card-body">
            <p class="card-text">
                <%= listing.description %> 
                <li>&#8377; <%= listing.price.toLocaleString("en-IN") %>/night</li>
                <li><%= listing.location %></li>
                <li><%= listing.country %></li>
            </p>
    <div class="row">
    <div class="col">
        <a href="/listings/<%=listing._id%>/edit" class="btn btn-danger add-btn">Edit</a>
      <br> <br>
        <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
            <button class="btn btn-dark">Delete</button>
        </form>
        <hr>
    </form>

        <!-- review box -->
        <div class="mb-3">
            <h4>Leave a review</h4>
            <form method="POST" action="/listings/<%=listing.id%>/reviews" novalidate class="needs-validation">
              <div class="mb-3 mt-3"> 
                <label for="rating" class="form-label">Rating</label> 
                <input name="review[rating]" 
                type="range" 
                min="1" max="5"
                 id="rating" 
                 class="form-range">
            </div>
                <div class="rating mb-3">
                <label for="comment" class="form-label"></label>
                <textarea name="review[comment]" id="comment" class="form-control" cols="50" rows="3" required placeholder="Comments"></textarea>
               <div class="invalid-feedback">Add some reviews </div>
            </div>
            <button class="btn btn-outline-dark">Submit</button>
        </form>
    </div>
    <hr>
  <h4>All reviews</h4>

         <div class="card-body review-card mt-3">
            <div class="card-title"><h5>Eve</h5></div>

    <p class="card-text">
       <b><%=reviews.comment%></b>
       <%=reviews.rating%> stars
    </p>
       
    
    <form method="POST" action="/listing//reviews/?_method=DELETE">
    <button class="btn btn-outline-dark mb-3">
        Delete
    </button>
    </form>
</div> 
 
</div>
</div> 
</body>


